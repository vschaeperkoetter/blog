<div id="post_content">
	<h1 class="title">
	  <%= @post.title %>
	</h1>
	 
	<p class="date">
	  Submitted <%= time_ago_in_words(@post.created_at) %> Ago
	</p>
	 
	<p class="body">
	  <%= @post.body %>
	</p>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
</div>

